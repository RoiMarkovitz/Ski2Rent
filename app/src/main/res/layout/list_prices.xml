<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/price_LBL_days"
        android:gravity="center"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="days"
        android:textSize="18sp"
        android:background="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="66.0"/>

    <TextView
        android:id="@+id/price_LBL_bronze"
        android:gravity="center"
        android:textAlignment="center"
        android:text="bronzePrice"
        android:textSize="18sp"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="66.6"/>

    <TextView
        android:id="@+id/price_LBL_silver"
        android:gravity="center"
        android:text="silverPrice"
        android:textSize="18sp"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="66.6"/>

    <TextView
        android:id="@+id/price_LBL_gold"
        android:gravity="center"
        android:text="goldPrice"
        android:textSize="18sp"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="66.6"/>


</LinearLayout>