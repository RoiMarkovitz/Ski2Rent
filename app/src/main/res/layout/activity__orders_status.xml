<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    tools:context=".activities.Activity_OrdersStatus">

    <TextView
        android:id="@+id/ordersStatus_LBL_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="18dp"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold"
        android:text="Orders Status "/>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/order_LBL_header"
        android:layout_below="@id/ordersStatus_LBL_title"
        android:background="@color/grey"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_LBL_details"
            android:gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Details"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="56.0"/>

        <TextView
            android:id="@+id/order_LBL_price"
            android:gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Price"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="90.6"/>

        <TextView
            android:id="@+id/order_LBL_status"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Status"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="90.0"/>

        <TextView
            android:id="@+id/order_LBL_clear"
            android:gravity="center"
            android:textStyle="bold"
            android:text=""
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="90.0"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/order_LST_records"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_LBL_header"
        tools:listitem="@layout/list_orders" />


</RelativeLayout>