<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    tools:context=".activities.Activity_OrdersStatus">

    <TextView
        android:id="@+id/ordersStatus_LBL_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="18dp"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold"
        android:text="Orders Status "/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/order_LST_records"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ordersStatus_LBL_title"
        tools:listitem="@layout/list_orders" />


</RelativeLayout>